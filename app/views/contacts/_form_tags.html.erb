<%= render :partial => 'tag_list', :object => @contact.tags, :locals => {:editable => true} %>

<div class="box" id="edit_tags_form" style="display:none;">
  <%= form_tag( {:controller => 'contacts', 
                :action => 'update',
                :project_id => @project, 
                :id => @contact }, 
                :method => :put, 
            	  :multipart => true ) do %>    
    
	
  	<%= render :partial => "contacts_tags/tags_form" %> 
	
  	<%= submit_tag l(:button_save) %>
  	<%= link_to l(:button_cancel), {}, :onclick => "$('#edit_tags_form').hide(); $('#tags_data').show(); return false;" %>
  <% end %>
</div>

